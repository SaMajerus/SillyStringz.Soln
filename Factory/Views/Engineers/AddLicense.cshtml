@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer

<h2>Add a license</h2>

<h4>Add a license for this engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngrId)

  @Html.Label("Select license")
  @Html.DropDownList("LicenseId")

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>