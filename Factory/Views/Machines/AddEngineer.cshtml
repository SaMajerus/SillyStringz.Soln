@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a engineer</h2>

<h4>Add a engineer to this machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select engineer")
  @Html.DropDownList("EngineerId")  //Looks for 'ViewBag.EngineerId' [on Ln 76 of ''MachinesController.cs''] and populates SelectList. 

  <input type="submit" value="Save" /> 
}

<p>@Html.ActionLink("Back to list", "Index")</p><br>
<p>@Html.ActionLink("Home", "Index", "Home")</p>