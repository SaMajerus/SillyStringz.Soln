@{
  Layout = "_Layout";
}

@model Factory.Models.Machine

<h2>Add a license</h2>

<h4>Add a license for this Machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select license")
  @Html.DropDownList("LicenseId")  //Looks for 'ViewBag.LicenseId' [on Ln 117 of ''MachinesController.cs''] and populates SelectList.

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list", "Index")</p>